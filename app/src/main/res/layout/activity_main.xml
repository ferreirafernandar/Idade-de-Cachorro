<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/cachorro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_texto"
        android:text="Digite a idade do seu cachorro para ver  a idade equivalente em anos humanos:"
        android:padding="15dp"
        android:textColor="@drawable/cor_texto"
        android:textSize="@dimen/tamanho_texto"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/caixaTextoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="number"
        android:padding="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/botaoIdadeId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caixaTextoId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Conferir idade" />

    <TextView
        android:id="@+id/resultadoIdadeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/botaoIdadeId"
        android:layout_marginTop="26dp"
        android:padding="15dp"
        android:textColor="@drawable/cor_texto"
        android:textSize="@dimen/tamanho_texto" />
</RelativeLayout>